<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sohier_ahmed.httprequest.MainActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_httpRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTTP REQUEST" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_response"
        app:layout_constraintVertical_bias="0.032"
        app:layout_constraintHorizontal_bias="0.094" />

    <Button
        android:id="@+id/btn_encode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encode" />
    <Button
        android:id="@+id/btn_decode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decode" />
    <TextView
        android:id="@+id/txt_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="json here"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lst_sheets"
        android:layout_width="311dp"
        android:layout_height="265dp"
        android:background="?attr/colorControlHighlight" />
</LinearLayout>
